@model IEnumerable<Arengo6_MVC.Models.Project>

@{
    ViewBag.Title = "ProjectIndex";
}

<h2>ProjectIndex</h2>

<p>
    @Html.ActionLink("Create New", "ProjectCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectTags)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectTags)
        </td>
        <td>
            @Html.ActionLink("Edit", "ProjectEdit", new { id=item.ID }) |
            @Html.ActionLink("Details", "ProjectDetails", new { id=item.ID }) |
            @Html.ActionLink("Delete", "ProjectDelete", new { id=item.ID })
        </td>
    </tr>
}

</table>
